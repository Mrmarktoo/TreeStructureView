<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#969696">

    <com.marktoo.widget.treebranchview.TreeBranchView
        android:id="@+id/tree"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:dashH="1dp"
        app:dashW="3dp"
        app:isDash="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineCo="@color/colorAccent"
        app:lineW="5dp"
        app:mode="0" />

    <ImageView
        android:id="@+id/icon"
        style="@style/tree_image"
        app:layout_constraintBottom_toBottomOf="@id/tree"
        app:layout_constraintStart_toEndOf="@id/tree"
        app:layout_constraintTop_toTopOf="@id/tree" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>